<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zachl.tcubed">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/t3_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/t3_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".MainActivity"
            android:theme="@style/T3_Theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayMenu"
            android:parentActivityName=".MainActivity"
            android:theme="@style/T3_Theme" />
        <activity
            android:name=".ThemesMenu"
            android:parentActivityName=".MainActivity"
            android:theme="@style/T3_Theme" />
        <activity
            android:name=".DirectionsMenu"
            android:parentActivityName=".MainActivity"
            android:theme="@style/T3_Theme" />
        <activity
            android:name=".Credits"
            android:parentActivityName=".MainActivity"
            android:theme="@style/T3_Theme" />
        <activity
            android:name=".GameBoard"
            android:parentActivityName=".PlayMenu"
            android:theme="@style/T3_Theme" />
        <activity
            android:name=".ThemesList"
            android:parentActivityName=".ThemesMenu"
            android:theme="@style/T3_Theme" />
        <activity
            android:name=".BackgroundsList"
            android:parentActivityName=".ThemesMenu"
            android:theme="@style/T3_Theme" />
        <activity
            android:name=".IconsList"
            android:parentActivityName=".ThemesMenu"
            android:theme="@style/T3_Theme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>